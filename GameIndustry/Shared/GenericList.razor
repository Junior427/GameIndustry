@typeparam TItem

@if (ListOfItems == null)
{
    @* <tr>LOADING DATA...</tr> *@
    @if (NullList != null)
    {
        @NullList
    }
    else 
    {
        <img src="https://blog.sqlauthority.com/wp-content/uploads/2007/06/null.png" height="200" />
    }
}
else if (ListOfItems.Count == 0)
{
    @if (NullList != null)
    {
        @EmptyList
    }
    else
    {
        <img src="https://i.pinimg.com/736x/ae/8a/c2/ae8ac2fa217d23aadcc913989fcc34a2.jpg" height="200" />
    }

}
else
{
    @foreach (var item in ListOfItems)
    {        
       @ItemTemplate(item)
    }
}


@code {
    [Parameter] public RenderFragment NullList { get; set; }
    [Parameter] public RenderFragment EmptyList { get; set; }
    [Parameter] public RenderFragment<TItem> ItemTemplate{ get; set; }
    [Parameter] public List<TItem> ListOfItems { get; set; }
}
